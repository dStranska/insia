<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
      <h3>
        Welcome <%= current_user.email %>
      </h3>
    </div>
  </div>
  <div class="row">
    <%= link_to '<button class="btn btn-secondary">Add number</button>'.html_safe, new_number_path %>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Number</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @data.each do |d| %>

          <tr>
            <td><%= d.phone %></td>
            <td><%= d.description %></td>
            <td>
              <%= link_to 'Edit', number_path(d.id), class: 'btn btn-primary' %>
              <%= link_to 'Delete', number_path(d.id),method: :delete, class: 'btn btn-danger',data: {:confirm => 'Are you sure?'}  %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>


</div>