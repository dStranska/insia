<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
      <h3>Registration</h3>
    </div>
  </div>

  <div class="row mt-3">

    <div class="col-md-4 offset-md-4">


      <%= form_for @user, url: users_path do |f| %>
        <div class="form-group">

          <%= f.text_field :email, autocomplete: "email", class: "form-control", placeholder: 'Email', autofocus: true %>
          <%= render partial: "partials/error_messages", locals: {errors: @user.errors.full_messages_for(:email)} %>

          <%= f.password_field :password, autocomplete: "password", class: "form-control mt-1", placeholder: 'Password' %>
          <%= render partial: "partials/error_messages", locals: {errors: @user.errors.full_messages_for(:password)} %>

          <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "form-control mt-1", placeholder: 'Password confirmation' %>
          <%= render partial: "partials/error_messages", locals: {errors: @user.errors.full_messages_for(:password_confirmation)} %>

          <%= f.submit 'Register', class: "btn btn-secondary btn-block mt-2" %>

        </div>

      <% end %>
      <hr/>
      <div class="text-center">
        <%= link_to 'Login', new_sessions_path %>
      </div>
    </div>
  </div>


</div>

